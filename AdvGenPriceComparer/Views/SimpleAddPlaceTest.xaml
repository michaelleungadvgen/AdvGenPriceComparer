<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AdvGenPriceComparer.Desktop.WinUI.Views.SimpleAddPlaceTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" Background="White">
        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Simple Add Place Test" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            
            <StackPanel Spacing="8">
                <Button Content="Test Basic Dialog" Click="TestBasicDialog_Click" HorizontalAlignment="Center" Padding="16,8"/>
                <Button Content="Test Add Place Dialog (Direct)" Click="TestAddPlaceDirect_Click" HorizontalAlignment="Center" Padding="16,8"/>
                <Button Content="Test Add Place Dialog (Service)" Click="TestAddPlaceService_Click" HorizontalAlignment="Center" Padding="16,8"/>
            </StackPanel>
            
            <TextBlock x:Name="StatusText" Text="Click any button to test dialogs" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>