<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AdvGenPriceComparer.Desktop.WinUI.Views.PlaceListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Store Management" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock Text="Manage supermarket locations for price tracking" FontSize="14" Opacity="0.7"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                <Button Content="Add Store" Click="AddStore_Click"/>
                <Button Content="Test Dialog" Click="TestDialog_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Simple Store List -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="12">
                <!-- Sample Store Cards -->
                <Border Background="#f5f5f5" Padding="16" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Coles Westfield" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="123 Main Street, Sydney NSW 2000" FontSize="14" Opacity="0.7"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Edit" FontSize="12"/>
                            <Button Content="View Prices" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <Border Background="#f5f5f5" Padding="16" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Woolworths Metro" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="456 George Street, Sydney NSW 2000" FontSize="14" Opacity="0.7"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Edit" FontSize="12"/>
                            <Button Content="View Prices" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <Border Background="#f5f5f5" Padding="16" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="IGA Express" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="789 Pitt Street, Sydney NSW 2000" FontSize="14" Opacity="0.7"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Edit" FontSize="12"/>
                            <Button Content="View Prices" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>