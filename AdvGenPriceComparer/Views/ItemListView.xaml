<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AdvGenPriceComparer.Desktop.WinUI.Views.ItemListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Grocery Items" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock Text="Track grocery prices across different supermarkets" FontSize="14" Opacity="0.7"/>
            
            <!-- Search and Filter Bar -->
            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Search items..." 
                         Margin="0,0,16,0" TextChanged="SearchBox_TextChanged"/>
                <Button Grid.Column="1" Content="Add Item" Click="AddItem_Click" 
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </Grid>
        </StackPanel>

        <!-- Items List -->
        <ScrollViewer Grid.Row="1">
            <ListView x:Name="ItemsList" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="0,4">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Item Info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                        <TextBlock FontSize="14" Opacity="0.7">
                                            <Run Text="{Binding Brand}"/>
                                            <Run Text="•"/>
                                            <Run Text="{Binding Category}"/>
                                            <Run Text="•"/>
                                            <Run Text="{Binding CurrentPriceDisplay}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Description}" FontSize="12" 
                                                   Opacity="0.6" Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- Price Trend Indicator -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" 
                                               VerticalAlignment="Center" Margin="0,0,16,0">
                                        <TextBlock Text="{Binding PriceTrendIcon}" FontSize="16" 
                                                   Foreground="{Binding PriceTrendColor}"/>
                                        <TextBlock Text="{Binding PriceTrendText}" FontSize="12" 
                                                   Foreground="{Binding PriceTrendColor}"/>
                                    </StackPanel>
                                    
                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" 
                                               VerticalAlignment="Center">
                                        <Button Content="Edit" FontSize="12" Click="EditItem_Click" 
                                                Tag="{Binding}"/>
                                        <Button Content="Add Price" FontSize="12" Click="AddPrice_Click" 
                                                Tag="{Binding}" Style="{StaticResource PrimaryButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Expander.Header>
                            
                            <!-- Price History Content -->
                            <Grid Margin="0,12,0,0" Background="#f8fafc" Padding="16" CornerRadius="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Price History Header -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Price History" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Grid.Column="1" FontSize="12" Opacity="0.7">
                                        <Run Text="{Binding PriceHistoryCount}"/>
                                        <Run Text=" records"/>
                                    </TextBlock>
                                </Grid>
                                
                                <!-- Price Records List -->
                                <ListView Grid.Row="1" ItemsSource="{Binding PriceHistory}" 
                                          MaxHeight="300" SelectionMode="None">
                                    <ListView.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Padding="8,4" Background="#e2e8f0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Store" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock Grid.Column="1" Text="Price" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock Grid.Column="2" Text="Date" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock Grid.Column="3" Text="Status" FontWeight="SemiBold" FontSize="12"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.HeaderTemplate>
                                    
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="8,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Store Info -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding StoreName}" FontSize="13" FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding StoreLocation}" FontSize="11" Opacity="0.6"/>
                                                </StackPanel>
                                                
                                                <!-- Price -->
                                                <TextBlock Grid.Column="1" Text="{Binding Price, Converter={StaticResource PriceFormatConverter}}" 
                                                           FontSize="13" FontWeight="SemiBold"/>
                                                
                                                <!-- Date -->
                                                <TextBlock Grid.Column="2" Text="{Binding RecordedDate}" FontSize="12"/>
                                                
                                                <!-- Status Indicator -->
                                                <Border Grid.Column="3" Background="{Binding StatusColor}" 
                                                        CornerRadius="12" Padding="6,2" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding StatusText}" FontSize="10" 
                                                               Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                
                                <!-- Empty State -->
                                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           Visibility="{Binding HasNoPriceHistory, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="No price history available" FontSize="14" Opacity="0.6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Click 'Add Price' to start tracking prices for this item" 
                                               FontSize="12" Opacity="0.5" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        
        <!-- Loading State -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   x:Name="LoadingPanel" Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="40" Height="40"/>
            <TextBlock Text="Loading items..." Margin="0,12,0,0" FontSize="14" Opacity="0.7"/>
        </StackPanel>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   x:Name="EmptyPanel" Visibility="Collapsed">
            <TextBlock Text="No items found" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBlock Text="Add your first grocery item to start tracking prices" 
                       FontSize="14" Opacity="0.6" HorizontalAlignment="Center" Margin="0,8,0,16"/>
            <Button Content="Add Item" Click="AddItem_Click" Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>