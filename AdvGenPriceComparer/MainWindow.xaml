<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AdvGenPriceComparer.Desktop.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Simple Title Bar -->
        <Border Grid.Row="0" Background="#f8fafb" Padding="24,16" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#10b981" VerticalAlignment="Center"/>
                <TextBlock Text="AdvGen Price Comparer" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Simple Sidebar -->
            <Border Grid.Column="0" Background="#ffffff" BorderBrush="#e2e8f0" BorderThickness="0,0,1,0" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Navigation" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <!-- Dashboard -->
                    <Border Background="#dbeafe" Padding="12" CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#3b82f6" VerticalAlignment="Center"/>
                            <TextBlock Text="Dashboard" FontWeight="Medium" Foreground="#3b82f6" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Items -->
                    <Button x:Name="ItemsNavButton" HorizontalAlignment="Stretch" 
                           Background="Transparent" BorderThickness="0" Click="ItemsNav_Click" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#6b7280" VerticalAlignment="Center"/>
                            <TextBlock Text="Items" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Stores -->
                    <Button x:Name="StoresNavButton" HorizontalAlignment="Stretch" 
                           Background="Transparent" BorderThickness="0" Click="StoresNav_Click" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#6b7280" VerticalAlignment="Center"/>
                            <TextBlock Text="Stores" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Categories -->
                    <Button x:Name="CategoriesNavButton" HorizontalAlignment="Stretch" 
                           Background="Transparent" BorderThickness="0" Click="CategoriesNav_Click" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#6b7280" VerticalAlignment="Center"/>
                            <TextBlock Text="Categories" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <Button HorizontalAlignment="Stretch" Click="AddItem_Click" Background="#10b981" Foreground="White" Margin="0,4,0,4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Item" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch" Click="AddPlace_Click" Background="#3b82f6" Foreground="White" Margin="0,4,0,4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Store" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Frame -->
            <ScrollViewer Grid.Column="1" Padding="24">
                <StackPanel>
                    <!-- Dashboard Content -->
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <!-- Stats -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#f0f9ff" Padding="16" CornerRadius="8" Margin="0,0,8,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#3b82f6" VerticalAlignment="Center"/>
                                    <TextBlock Text="Total Items" FontSize="14" Opacity="0.7" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="247" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Background="#f0fdf4" Padding="16" CornerRadius="8" Margin="4,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                    <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#10b981" VerticalAlignment="Center"/>
                                    <TextBlock Text="Tracked Stores" FontSize="14" Opacity="0.7" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="5" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Background="#fefce8" Padding="16" CornerRadius="8" Margin="8,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#f59e0b" VerticalAlignment="Center"/>
                                    <TextBlock Text="Price Updates" FontSize="14" Opacity="0.7" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="34" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Page Content Frame -->
                    <Frame x:Name="ContentFrame" Background="Transparent"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>