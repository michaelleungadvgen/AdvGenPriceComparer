<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AdvGenPriceComparer.Desktop.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Simple Title Bar -->
        <Border Grid.Row="0" Background="#f8fafb" Padding="24,16" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1">
            <TextBlock Text="AdvGen Price Comparer" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Simple Sidebar -->
            <Border Grid.Column="0" Background="#ffffff" BorderBrush="#e2e8f0" BorderThickness="0,0,1,0" Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="Navigation" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <!-- Dashboard -->
                    <Border Background="#dbeafe" Padding="12" CornerRadius="6">
                        <TextBlock Text="Dashboard" FontWeight="Medium" Foreground="#3b82f6"/>
                    </Border>
                    
                    <!-- Items -->
                    <Button Content="Items" HorizontalAlignment="Stretch"
                           Background="Transparent" BorderThickness="0" Padding="12,8"
                           Click="ItemsNav_Click"/>
                    
                    <!-- Stores -->
                    <Button Content="Stores" HorizontalAlignment="Stretch"
                           Background="Transparent" BorderThickness="0" Padding="12,8"
                           Click="StoresNav_Click"/>
                    
                    <!-- Categories -->
                    <Button Content="Categories" HorizontalAlignment="Stretch"
                           Background="Transparent" BorderThickness="0" Padding="12,8"
                           Click="CategoriesNav_Click"/>
                    
                    <!-- Reports -->
                    <Button Content="Reports" HorizontalAlignment="Stretch"
                           Background="Transparent" BorderThickness="0" Padding="12,8"
                           Click="ReportsNav_Click"/>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <Button Content="Add Item" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddItemCommand}"/>
                    <Button Content="Add Store" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddPlaceCommand}"/>
                    <Button Content="View Reports" HorizontalAlignment="Stretch" Click="ReportsNav_Click"/>
                    
                    <!-- Demo Data -->
                    <TextBlock Text="Demo" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <Button Content="Generate Demo Data" HorizontalAlignment="Stretch" Click="GenerateDemoData_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Frame -->
            <ScrollViewer Grid.Column="1" Padding="24">
                <StackPanel>
                    <!-- Dashboard Content -->
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <!-- Stats -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#f0f9ff" Padding="16" CornerRadius="8" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Total Items" FontSize="14" Opacity="0.7"/>
                                <TextBlock Text="{x:Bind ViewModel.TotalItems, Mode=OneWay}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Background="#f0fdf4" Padding="16" CornerRadius="8" Margin="4,0">
                            <StackPanel>
                                <TextBlock Text="Tracked Stores" FontSize="14" Opacity="0.7"/>
                                <TextBlock Text="{x:Bind ViewModel.TrackedStores, Mode=OneWay}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" Background="#fefce8" Padding="16" CornerRadius="8" Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Price Updates" FontSize="14" Opacity="0.7"/>
                                <TextBlock Text="{x:Bind ViewModel.PriceUpdates, Mode=OneWay}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Page Content Frame -->
                    <Frame x:Name="ContentFrame" Background="Transparent"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>