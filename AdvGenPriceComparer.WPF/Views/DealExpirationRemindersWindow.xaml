<Window x:Class="AdvGenPriceComparer.WPF.Views.DealExpirationRemindersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Deal Expiration Reminders"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SummaryStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
        </Style>
        
        <DataTemplate x:Key="DealItemTemplate">
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Deal Info -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding ItemName}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding StoreName}" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="{Binding Savings}" 
                                   FontSize="12" 
                                   Foreground="#4CAF50"
                                   FontWeight="SemiBold"
                                   Margin="0,5,0,0"
                                   Visibility="{Binding Savings, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <!-- Price Info -->
                    <StackPanel Grid.Column="1" Margin="20,0">
                        <TextBlock Text="{Binding PriceDisplay}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#2196F3"/>
                        <TextBlock Text="{Binding OriginalPriceDisplay}" 
                                   FontSize="12" 
                                   Foreground="#999"
                                   TextDecorations="Strikethrough"
                                   Visibility="{Binding OriginalPriceDisplay, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                    </StackPanel>
                    
                    <!-- Expiry Info -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" MinWidth="120">
                        <Border Background="{Binding UrgencyColor, Converter={StaticResource StringToSolidColorBrushConverter}}" 
                                CornerRadius="4" 
                                Padding="8,4"
                                HorizontalAlignment="Right">
                            <TextBlock Text="{Binding ExpiryDisplay}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="{Binding ExpiryDateDisplay}" 
                                   FontSize="11" 
                                   Foreground="#666"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="â° Deal Expiration Reminders" 
                   Style="{StaticResource HeaderStyle}"/>
        
        <!-- Summary -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding ExpiringSummary}" 
                   Style="{StaticResource SummaryStyle}"/>
        
        <!-- Filters -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Show deals expiring in:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding DaysFilterOptions}" 
                      SelectedItem="{Binding SelectedDaysFilter}"
                      Width="60"
                      VerticalAlignment="Center"
                      IsEnabled="{Binding ShowExpiredDeals, Converter={StaticResource InverseBooleanConverter}}"/>
            
            <TextBlock Grid.Column="2" 
                       Text="days" 
                       VerticalAlignment="Center"
                       Margin="5,0,20,0"
                       Visibility="{Binding ShowExpiredDeals, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            
            <CheckBox Grid.Column="3" 
                      Content="Show expired deals"
                      IsChecked="{Binding ShowExpiredDeals}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Deals List -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="10">
                    <ItemsControl ItemsSource="{Binding ExpiringDeals}" 
                                  ItemTemplate="{StaticResource DealItemTemplate}"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <TextBlock Text="No deals expiring soon! ðŸŽ‰" 
                           FontSize="16"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding TotalExpiringCount, Converter={StaticResource ZeroToVisibilityConverter}}"/>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="ðŸ”„ Refresh" 
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="âœ“ Dismiss Selected" 
                    Command="{Binding DismissDealCommand}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Content="âœ“âœ“ Dismiss All" 
                    Command="{Binding DismissAllCommand}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Content="ðŸ—‘ Clear Dismissed" 
                    Command="{Binding ClearDismissedCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
