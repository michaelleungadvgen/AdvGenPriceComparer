<Page x:Class="AdvGenPriceComparer.WPF.Views.AlertsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Alerts"
      Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="#e8e8e8" BorderThickness="0,0,0,1" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Price Alerts" FontSize="24" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{Binding AlertCountText}" FontSize="13" Foreground="#666"/>
                        <TextBlock Text=" â€¢ " FontSize="13" Foreground="#666" Margin="8,0"/>
                        <TextBlock Text="{Binding UnreadCountText}" FontSize="13" Foreground="#f59e0b" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Mark All Read"
                            Command="{Binding MarkAllAsReadCommand}"
                            Width="110"
                            Height="36"
                            Background="Transparent"
                            Foreground="#555"
                            BorderBrush="#ddd"
                            BorderThickness="1"
                            Cursor="Hand"
                            FontSize="14"
                            Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="2"
                                                    Padding="12,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f9f9f9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Add Alert"
                            Command="{Binding AddAlertCommand}"
                            Width="90"
                            Height="36"
                            Background="#111"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="2"
                                                    Padding="12,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#f9f9f9" BorderBrush="#e8e8e8" BorderThickness="0,0,0,1" Padding="24,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter:" FontSize="13" FontWeight="SemiBold" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <RadioButton Content="All" GroupName="AlertFilter" Margin="0,0,16,0" FontSize="13">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FilterType}" Value="All">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
                <RadioButton Content="Unread" GroupName="AlertFilter" Margin="0,0,16,0" FontSize="13">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FilterType}" Value="Unread">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
                <RadioButton Content="Active" GroupName="AlertFilter" Margin="0,0,16,0" FontSize="13">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FilterType}" Value="Active">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
                <RadioButton Content="Dismissed" GroupName="AlertFilter" FontSize="13">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FilterType}" Value="Dismissed">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
            </StackPanel>
        </Border>

        <!-- Alerts List -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding Alerts}"
                  SelectedItem="{Binding SelectedAlert}"
                  SelectionMode="Single"
                  BorderThickness="0"
                  Background="White"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#f0f0f0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#f9f9f9"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#f0f9ff"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Alert Indicator -->
                            <Border Grid.Column="0"
                                    Width="8"
                                    Height="8"
                                    CornerRadius="4"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#22c55e"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Alert.IsRead}" Value="True">
                                                <Setter Property="Background" Value="#d1d5db"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>

                            <!-- Alert Content -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding DisplayMessage}" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock FontSize="12" Foreground="#666">
                                        <Run Text="{Binding ItemName}"/>
                                        <Run Text=" at "/>
                                        <Run Text="{Binding PlaceName}"/>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock FontSize="11" Foreground="#999" Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <MultiBinding StringFormat="Last triggered: {0:g}">
                                                        <Binding Path="Alert.LastTriggered" TargetNullValue="Never"/>
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Alert.LastTriggered}" Value="{x:Null}">
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="Created: {0:g}">
                                                                <Binding Path="Alert.DateCreated"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="View"
                                        Command="{Binding DataContext.ViewAlertCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        Foreground="#555"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Cursor="Hand"
                                        FontSize="13"
                                        Margin="0,0,8,0"/>
                                <Button Command="{Binding DataContext.MarkAsReadCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        Foreground="#555"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Cursor="Hand"
                                        FontSize="13"
                                        Margin="0,0,8,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Content" Value="Mark Read"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Alert.IsRead}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Dismiss"
                                        Command="{Binding DataContext.DismissAlertCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        Foreground="#dc2626"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Cursor="Hand"
                                        FontSize="13"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
