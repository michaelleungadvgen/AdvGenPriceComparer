<Window x:Class="AdvGenPriceComparer.WPF.Views.GlobalSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvGenPriceComparer.WPF.Views"
        mc:Ignorable="d"
        Title="Global Search" 
        Height="650" 
        Width="800"
        MinHeight="500"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Window.Resources>
        <!-- Relevance Score to Opacity Converter -->
        <local:RelevanceToOpacityConverter x:Key="RelevanceToOpacityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#111" 
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ” Global Search" 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="Search across all products, stores, and prices" 
                               FontSize="13" 
                               Foreground="#999" 
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="âœ•"
                        Command="{Binding ClearSearchCommand}"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        VerticalAlignment="Top"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Search Box Area -->
        <Border Grid.Row="1" 
                Background="#f9f9f9" 
                BorderBrush="#e8e8e8" 
                BorderThickness="0,0,0,1" 
                Padding="24,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Search Input -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#ddd" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="ðŸ”" 
                                   FontSize="18" 
                                   Margin="0,0,12,0" 
                                   Opacity="0.5"
                                   VerticalAlignment="Center"/>
                        
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 Padding="0">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Search products, stores, or prices..."
                                                                     Foreground="#999"
                                                                     FontSize="16"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Search Button -->
                        <Button Grid.Column="2"
                                Content="Search"
                                Command="{Binding SearchCommand}"
                                Padding="20,10"
                                Background="#111"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#333"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#ccc"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Results Summary -->
                <TextBlock Grid.Row="1"
                           Text="{Binding ResultsSummary}"
                           FontSize="13"
                           Foreground="#666"
                           Margin="0,12,0,0"
                           Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Results Area -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Recent Searches (shown when no search active) -->
            <Border Grid.Row="0"
                    Background="White"
                    Padding="24,16"
                    Visibility="{Binding HasResults, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="Recent Searches"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"/>
                        
                        <Button Grid.Column="1"
                                Content="Clear History"
                                Command="{Binding ClearHistoryCommand}"
                                Padding="12,6"
                                Background="Transparent"
                                Foreground="#666"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand"
                                Visibility="{Binding RecentSearches.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding RecentSearches}"
                                  Margin="0,12,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}"
                                        Command="{Binding DataContext.UseRecentSearchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="12,8"
                                        Margin="0,0,8,8"
                                        Background="#f0f0f0"
                                        Foreground="#333"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontSize="13">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="16"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e0e0e0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Empty State -->
                    <TextBlock Text="No recent searches"
                               FontSize="13"
                               Foreground="#999"
                               Margin="0,12,0,0"
                               Visibility="{Binding RecentSearches.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
            
            <!-- Search Results -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding GroupedResults}"
                              Margin="24,16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Group Section -->
                            <StackPanel Margin="0,0,0,24">
                                <!-- Group Header -->
                                <TextBlock Text="{Binding GroupTitle}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#666"
                                           Margin="0,0,0,12"/>
                                
                                <!-- Results in Group -->
                                <ItemsControl ItemsSource="{Binding Results}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White"
                                                    BorderBrush="#e8e8e8"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="12,16"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="ResultBorder_MouseLeftButtonDown"
                                                    Tag="{Binding}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Icon -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Icon}"
                                                               FontSize="28"
                                                               Margin="0,0,16,0"
                                                               VerticalAlignment="Center"/>
                                                    
                                                    <!-- Content -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="15"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#111"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Subtitle}"
                                                                   FontSize="12"
                                                                   Foreground="#666"
                                                                   Margin="0,2,0,0"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                   FontSize="12"
                                                                   Foreground="#999"
                                                                   Margin="0,2,0,0"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Matched Field Indicator -->
                                                    <Border Grid.Column="2"
                                                            Background="#f0f9ff"
                                                            CornerRadius="12"
                                                            Padding="8,4"
                                                            Margin="12,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding MatchedField, Converter={StaticResource NullToVisibilityConverter}}">
                                                        <TextBlock Text="{Binding MatchedField}"
                                                                   FontSize="10"
                                                                   Foreground="#0066cc"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- No Results State -->
            <Border Grid.Row="1"
                    Background="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding HasNoResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”"
                               FontSize="48"
                               Opacity="0.3"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ResultsSummary}"
                               FontSize="16"
                               Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="Try a different search term"
                               FontSize="13"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Loading Indicator -->
            <Border Grid.Row="1"
                    Background="#80FFFFFF"
                    Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                Width="200"
                                Height="4"/>
                    <TextBlock Text="Searching..."
                               FontSize="14"
                               Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
