<Window x:Class="AdvGenPriceComparer.WPF.Views.ExportDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Export Data"
        Height="550"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Export Data to JSON" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <!-- Export Options -->
                <GroupBox Header="Export Options" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox Content="Export Shops" IsChecked="{Binding ExportShops}" FontSize="13" Margin="0,3"/>
                        <CheckBox Content="Export Products" IsChecked="{Binding ExportGoods}" FontSize="13" Margin="0,3"/>
                        <CheckBox Content="Export Prices" IsChecked="{Binding ExportPrices}" FontSize="13" Margin="0,3"/>
                        <CheckBox Content="Export Manifest" IsChecked="{Binding ExportManifest}" FontSize="13" Margin="0,3"/>
                        <Separator Margin="0,10"/>
                        <CheckBox Content="Enable Compression (.json.gz)" IsChecked="{Binding EnableCompression}" FontSize="13" Margin="0,3"/>
                        <TextBlock Text="Reduces file size significantly" FontSize="11" Foreground="Gray" Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Filters -->
                <GroupBox Header="Filters (Optional)" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Category Filter -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Category:" VerticalAlignment="Center" FontSize="13"/>
                            <ComboBox Grid.Column="1" 
                                      Text="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      FontSize="13"
                                      Padding="5">
                                <ComboBoxItem Content="(All Categories)"/>
                                <ComboBoxItem Content="Meat &amp; Seafood"/>
                                <ComboBoxItem Content="Dairy &amp; Eggs"/>
                                <ComboBoxItem Content="Fruits &amp; Vegetables"/>
                                <ComboBoxItem Content="Bakery"/>
                                <ComboBoxItem Content="Pantry Staples"/>
                                <ComboBoxItem Content="Snacks &amp; Confectionery"/>
                                <ComboBoxItem Content="Beverages"/>
                                <ComboBoxItem Content="Frozen Foods"/>
                                <ComboBoxItem Content="Household Products"/>
                                <ComboBoxItem Content="Personal Care"/>
                            </ComboBox>
                        </Grid>

                        <!-- Date Range Filter -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Date Range:" VerticalAlignment="Center" FontSize="13"/>
                            <DatePicker Grid.Column="1" SelectedDate="{Binding FromDate}" FontSize="13"/>
                            <TextBlock Grid.Column="2" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <DatePicker Grid.Column="3" SelectedDate="{Binding ToDate}" FontSize="13"/>
                        </Grid>

                        <!-- Price Range and On Sale -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Price Range ($):" VerticalAlignment="Center" FontSize="13"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Padding="5"/>
                            <TextBlock Grid.Column="2" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3" 
                                     Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Padding="5"/>
                            <CheckBox Grid.Column="5" 
                                      Content="Only on sale" 
                                      IsChecked="{Binding OnlyOnSale}"
                                      VerticalAlignment="Center"
                                      FontSize="13"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- Output Path -->
                <GroupBox Header="Output File" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Padding="8"
                                 VerticalAlignment="Center"
                                 IsReadOnly="True"
                                 Background="#f9f9f9"/>

                        <Button Grid.Column="1"
                                Content="Browse..."
                                Command="{Binding BrowseCommand}"
                                Margin="10,0,0,0"
                                Padding="15,8"
                                Background="Transparent"
                                Foreground="#555"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                Cursor="Hand"
                                FontSize="13"/>
                    </Grid>
                </GroupBox>

                <!-- Progress Bar -->
                <Border Background="#f0f9ff"
                        BorderBrush="#3b82f6"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="4"
                        Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="{Binding ProgressStatus}"
                                   FontSize="13"
                                   Foreground="#1e3a8a"
                                   Margin="0,0,0,5"/>
                        <ProgressBar Value="{Binding ProgressPercentage}" 
                                     Maximum="100"
                                     Height="20"
                                     Background="#e0e7ff"
                                     Foreground="#3b82f6"/>
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0} %'}"
                                   FontSize="11"
                                   Foreground="#666"
                                   HorizontalAlignment="Right"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Export Status -->
                <Border Background="#f0fdf4"
                        BorderBrush="#22c55e"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="4"
                        Visibility="{Binding StatusVisibility}"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="13"
                                   Foreground="#166534"
                                   TextWrapping="Wrap"/>
                        <ItemsControl ItemsSource="{Binding ExportedFiles}" Margin="10,10,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontSize="12"
                                               Foreground="#666"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" BorderBrush="#e8e8e8" BorderThickness="0,1,0,0" Background="#f9f9f9" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Width="90"
                        Height="36"
                        Background="Transparent"
                        Foreground="#666"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        Margin="0,0,10,0"/>

                <Button Content="Export"
                        Command="{Binding ExportCommand}"
                        IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"
                        Width="90"
                        Height="36"
                        Background="#111"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="2"
                                                Padding="12,0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#ccc"/>
                                    <Setter Property="Foreground" Value="#999"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
