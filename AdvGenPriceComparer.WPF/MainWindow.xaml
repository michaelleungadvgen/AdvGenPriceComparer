<ui:FluentWindow x:Class="AdvGenPriceComparer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvGenPriceComparer.WPF"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="AdvGen Price Comparer"
        Height="700"
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="False"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar with Window Controls -->
        <Border Grid.Row="0" Background="{StaticResource SystemAccentBrushLight3}"
                BorderBrush="{StaticResource SystemAccentBrush}" BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" Text="AdvGen Price Comparer"
                          VerticalAlignment="Center" Margin="12,0,0,0"
                          FontWeight="SemiBold" FontSize="13"
                          Foreground="{StaticResource SystemAccentBrushDark3}"/>

                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Minimize Button -->
                    <Button x:Name="MinimizeButton" Content="─" Width="46" Height="32"
                           Background="Transparent" BorderThickness="0"
                           Foreground="{StaticResource SystemAccentBrushDark3}"
                           FontSize="10" FontWeight="Bold"
                           Click="MinimizeButton_Click"
                           Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SystemAccentBrushLight2}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Maximize/Restore Button -->
                    <Button x:Name="MaximizeButton" Content="□" Width="46" Height="32"
                           Background="Transparent" BorderThickness="0"
                           Foreground="{StaticResource SystemAccentBrushDark3}"
                           FontSize="14" FontWeight="Normal"
                           Click="MaximizeButton_Click"
                           Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SystemAccentBrushLight2}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton" Content="✕" Width="46" Height="32"
                           Background="Transparent" BorderThickness="0"
                           Foreground="{StaticResource SystemAccentBrushDark3}"
                           FontSize="14" FontWeight="Normal"
                           Click="CloseButton_Click"
                           Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Bar -->
        <Menu Grid.Row="1" Background="#f8fafb">
            <MenuItem Header="_File">
                <MenuItem Header="Import JSON Data..." Click="ImportJsonData_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Data">
                <MenuItem Header="Add Item" Command="{Binding AddItemCommand}"/>
                <MenuItem Header="Add Store" Command="{Binding AddPlaceCommand}"/>
                <Separator/>
                <MenuItem Header="Generate Demo Data" Click="GenerateDemoData_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Title Bar -->
        <Border Grid.Row="2" Background="#f8fafb" Padding="24,16" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1">
            <TextBlock Text="AdvGen Price Comparer" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#ffffff" BorderBrush="#e2e8f0" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Navigation" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <!-- Dashboard -->
                    <ui:Button x:Name="DashboardNav" Content="Dashboard" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="{StaticResource SystemAccentBrushLight3}"
                           Foreground="{StaticResource SystemAccentBrushDark3}"
                           BorderThickness="0"
                           Padding="12,8" Cursor="Hand" FontWeight="Medium"
                           Click="DashboardNav_Click"
                           Appearance="Secondary"/>

                    <!-- Navigation Buttons -->
                    <ui:Button x:Name="ItemsNavBtn" Content="Items" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="Transparent" Foreground="#555" BorderThickness="0"
                           Padding="12,8" Cursor="Hand"
                           Click="ItemsNav_Click"
                           Appearance="Secondary"/>

                    <ui:Button x:Name="StoresNavBtn" Content="Stores" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="Transparent" Foreground="#555" BorderThickness="0"
                           Padding="12,8" Cursor="Hand"
                           Click="StoresNav_Click"
                           Appearance="Secondary"/>

                    <ui:Button x:Name="CategoriesNavBtn" Content="Categories" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="Transparent" Foreground="#555" BorderThickness="0"
                           Padding="12,8" Cursor="Hand"
                           Click="CategoriesNav_Click"
                           Appearance="Secondary"/>

                    <ui:Button x:Name="PriceHistoryNavBtn" Content="Price History" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="Transparent" Foreground="#555" BorderThickness="0"
                           Padding="12,8" Cursor="Hand"
                           Click="PriceHistoryNav_Click"
                           Appearance="Secondary"/>

                    <ui:Button x:Name="ReportsNavBtn" Content="Reports" HorizontalAlignment="Stretch" Margin="0,0,0,4"
                           Background="Transparent" Foreground="#555" BorderThickness="0"
                           Padding="12,8" Cursor="Hand"
                           Click="ReportsNav_Click"
                           Appearance="Secondary"/>

                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" FontWeight="SemiBold" Margin="0,16,0,8" FontSize="12" Opacity="0.6"/>
                    <ui:Button Content="Add Item" HorizontalAlignment="Stretch" Margin="0,0,0,6"
                           Command="{Binding AddItemCommand}"
                           Appearance="Transparent"
                           Padding="8,6" Cursor="Hand" FontSize="13"/>
                    <ui:Button Content="Add Store" HorizontalAlignment="Stretch" Margin="0,0,0,6"
                           Command="{Binding AddPlaceCommand}"
                           Appearance="Transparent"
                           Padding="8,6" Cursor="Hand" FontSize="13"/>
                    <ui:Button Content="View Reports" HorizontalAlignment="Stretch" Margin="0,0,0,6"
                           Click="ReportsNav_Click"
                           Appearance="Transparent"
                           Padding="8,6" Cursor="Hand" FontSize="13"/>

                    <!-- Import/Export -->
                    <TextBlock Text="Import/Export" FontWeight="SemiBold" Margin="0,16,0,8" FontSize="12" Opacity="0.6"/>
                    <ui:Button Content="Import JSON Data" HorizontalAlignment="Stretch" Margin="0,0,0,6"
                           Click="ImportJsonData_Click"
                           Appearance="Transparent"
                           Padding="8,6" Cursor="Hand" FontSize="13"/>
                    <ui:Button Content="Export Data" HorizontalAlignment="Stretch" Margin="0,0,0,6"
                           Click="ExportJsonData_Click"
                           Appearance="Transparent"
                           Padding="8,6" Cursor="Hand" FontSize="13"/>

                        <!-- Demo Data -->
                        <TextBlock Text="Demo" FontWeight="SemiBold" Margin="0,16,0,8" FontSize="12" Opacity="0.6"/>
                        <ui:Button Content="Generate Demo Data" HorizontalAlignment="Stretch"
                               Click="GenerateDemoData_Click"
                               Appearance="Transparent"
                               Padding="8,6" Cursor="Hand" FontSize="13"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <!-- Dashboard Content -->
                <ScrollViewer x:Name="DashboardContent" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Dashboard" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <!-- Stats -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ui:Card Grid.Column="0" Margin="0,0,8,0">
                                <Border Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Total Items" FontSize="14" Opacity="0.7"/>
                                        <TextBlock Text="{Binding TotalItems}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource SystemAccentBrush}"/>
                                    </StackPanel>
                                </Border>
                            </ui:Card>

                            <ui:Card Grid.Column="1" Margin="4,0">
                                <Border Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Tracked Stores" FontSize="14" Opacity="0.7"/>
                                        <TextBlock Text="{Binding TrackedStores}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource SystemAccentBrush}"/>
                                    </StackPanel>
                                </Border>
                            </ui:Card>

                            <ui:Card Grid.Column="2" Margin="8,0,0,0">
                                <Border Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Price Updates" FontSize="14" Opacity="0.7"/>
                                        <TextBlock Text="{Binding PriceUpdates}" FontSize="28" FontWeight="Bold" Margin="0,4,0,0" Foreground="{StaticResource SystemAccentBrush}"/>
                                    </StackPanel>
                                </Border>
                            </ui:Card>
                        </Grid>

                        <!-- Charts -->
                        <Grid x:Name="ChartsGrid" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Items by Category Chart -->
                            <ui:Card Grid.Column="0" Margin="0,0,8,0">
                                <Border Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Items by Category" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                                        <Border x:Name="CategoryChartContainer" Height="300"/>
                                    </StackPanel>
                                </Border>
                            </ui:Card>

                            <!-- Price Trends Chart -->
                            <ui:Card Grid.Column="1" Margin="8,0,0,0">
                                <Border Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Price Updates Over Time" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                                        <Border x:Name="TrendChartContainer" Height="300"/>
                                    </StackPanel>
                                </Border>
                            </ui:Card>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!-- Page Content Frame -->
                <Frame x:Name="ContentFrame" Background="White" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
